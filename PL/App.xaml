<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bo="clr-namespace:BO;assembly=BL"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate x:Key="CustomerTemplate" DataType="bo:CustomerToList">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="ID: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"  Text="{Binding Path=CustomerId ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="2"  Text="Name: " Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3"  Text="{Binding Path=CustomerName ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="4"  Text="Phone: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="5"  Text="{Binding Path=CustomerPhone ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="Amount of not provided packages: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding Path=NumOfPackagesNotProvided ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="2"  Text="Amount of provided packages: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="3"  Text="{Binding Path=NumOfPackagesProvided ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="2" Grid.Column="0"  Text="Amount of not received packages: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="2" Grid.Column="1"  Text="{Binding Path=NumOfPackagesNotReceived ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="2" Grid.Column="2"  Text="Amount of received packages: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="2" Grid.Column="3"  Text="{Binding Path=NumOfPackagesReceived ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />

                </Grid>
                <Line Stroke="red" StrokeThickness="2px" X1="0" Y1="5" X2="750" Y2="5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="PackageTemplate" DataType="bo:PackageToList">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="ID: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"  Text="{Binding Path=Id ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="2"  Text="Sender name: " Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3"  Text="{Binding Path=SenderName ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="4"  Text="Target name: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="5"  Text="{Binding Path=TargetName ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="Package status: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding Path=PackageStatus ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="2"  Text="Package weight: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="3"  Text="{Binding Path=Weight ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="4"  Text="Priority: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="5"  Text="{Binding Path=Priority ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />

                </Grid>
                <Line Stroke="red" StrokeThickness="2px" X1="0" Y1="5" X2="740" Y2="5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DroneTemplate" DataType="bo:DroneToList">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="ID: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"  Text="{Binding Path=Id ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="2"  Text="Model: " Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3"  Text="{Binding Path=Model ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="4"  Text="Max weight: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="5"  Text="{Binding Path=MaxWeight ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="Drone status: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding Path=DroneStatus ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="2"  Text="Location of drone: " Margin="10" FontWeight="Bold" />
                    <TextBox Grid.Row="1" Grid.Column="3"    DataContext="{Binding Path=LocationOfDrone ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" >
                        <TextBox.Template>
                            <ControlTemplate>
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50*" />
                                        <RowDefinition Height="50*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="Longitude: " HorizontalAlignment="Left" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Longitude ,Mode=OneWay, StringFormat={}{0:F3}}" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Lattitude: "  HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Lattitude ,Mode=OneWay, StringFormat={}{0:F3}}" HorizontalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <TextBlock Grid.Row="1" Grid.Column="4"  Text="Battery: " Margin="10" FontWeight="Bold" />
                    <ProgressBar Grid.Row="1" Grid.Column="5"  Value="{Binding Path=BatteryStatus ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" Width="100" />
                    <TextBlock Grid.Row="2" Grid.Column="0"  Text="Package number: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="2" Grid.Column="1"  Text="{Binding Path=PackageNumber ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />

                </Grid>
                <Line Stroke="red" StrokeThickness="2px" X1="0" Y1="5" X2="740" Y2="5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="StationTemplate" DataType="bo:StationToList">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="ID: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"  Text="{Binding Path=Id ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="0" Grid.Column="2"  Text="Name: " Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="3"  Text="{Binding Path=Name ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="Number of charging stations occupied: "  Margin="10" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"  Text="{Binding Path=NumberOfChargingStationsOccupied ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                    <TextBlock Grid.Row="1" Grid.Column="2"  Text="Several  available charging stations: " Margin="10" FontWeight="Bold" />
                    <TextBlock Grid.Row="1" Grid.Column="3"  Text="{Binding Path=SeveralAvailableChargingStations ,Mode=OneWay}"  HorizontalAlignment="Center" Margin="10" />
                   
                </Grid>
                <Line Stroke="red" StrokeThickness="2px" X1="0" Y1="5" X2="750" Y2="5"/>
            </StackPanel>
        </DataTemplate>


    </Application.Resources>
</Application>
